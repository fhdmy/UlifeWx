@import"../../iconfont/iconfont.wxss";
page {
  height: 100%;
  position: relative;
  overflow: hidden;
  box-sizing: border-box;
}

.view-page {
  height: 100%;
  width: 100%;
  left: 0;
  top: 0;
  box-sizing: border-box;
  position: absolute;
  overflow: hidden;
}

.page-content {
  box-sizing: border-box;
  position: relative;
  overflow-y: auto;
  background: #f8f8f8;
  -webkit-overflow-scrolling: touch;
}

input{
  width: 710rpx;
  height: 96rpx;
  background:white;
  padding-left: 40rpx;
  margin-bottom: 80rpx;
  color:#666666;
}

button{
  width: 670rpx;
  margin: 0 auto;
  background: #FE9246;
  color: white;
}

.picker-wrapper{
  width: 100%;
  height: 96rpx;
  margin-bottom: 80rpx;
}

.picker-left-text{
  height: 80rpx;
  padding-top: 22rpx;
  background:white;
  padding-left: 40rpx;
  color:#666666;
  float: left;
  width: 240rpx;
}

.picker-right-text{
  height: 80rpx;
  width: 430rpx;
  padding-top: 22rpx;
  background:white;
  padding-left: 40rpx;
  color:#666666;
  float: left;
}

.placeholder{
  padding-left: 40rpx;
  padding-top: 20rpx;
  color:#666666;
  position: absolute;
}