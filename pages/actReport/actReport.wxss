@import"../../iconfont/iconfont.wxss";
page {
  height: 100%;
  position: relative;
  overflow: hidden;
  box-sizing: border-box;
}

.view-page {
  height: 100%;
  width: 100%;
  left: 0;
  top: 0;
  box-sizing: border-box;
  position: absolute;
  overflow: hidden;
}

.page-content {
  box-sizing: border-box;
  position: relative;
  overflow-y: auto;
  background: #f8f8f8;
  -webkit-overflow-scrolling: touch;
}

textarea{
  font-size: 36rpx;
  color: #484848;
  padding-top: 5rpx;
  /* margin: 40rpx 40rpx 70rpx 40rpx; */
  margin-bottom: 70rpx;
  display: block;
  /* width: 670rpx; */
  width: 100%;
  height: 600rpx;
  /* border: 1px solid #999999; */
  border-bottom: 1px solid #999999;
}

.placeholder{
  font-size: 36rpx;
  color: #666666;
  position: absolute;
}

button{
  width: 670rpx;
  margin: 0 40rpx;
  color: white;
  background: #FE9246;
}