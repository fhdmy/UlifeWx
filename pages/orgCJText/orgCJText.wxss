@import"../../iconfont/iconfont.wxss";
page {
  height: 100%;
  position: relative;
  overflow: hidden;
  box-sizing: border-box;
}

.view-page {
  height: 100%;
  width: 100%;
  left: 0;
  top: 0;
  box-sizing: border-box;
  position: absolute;
  overflow: hidden;
}

.page-content {
  box-sizing: border-box;
  position: relative;
  overflow-y: auto;
  background: #f8f8f8;
}

textarea{
  font-size: 36rpx;
  color: #484848;
  display: block;
  width: 100%;
  height: 800rpx;
  border-bottom: 1px solid #999999;
}

.confirm{
  font-size: 32rpx;
  margin-right: 40rpx;
  padding: 15rpx 40rpx;
  border: 1px solid #999999;
  float: right;
  margin-bottom:200rpx;
}

.option-wrapper{
  background: #E03636;
  width: 100%;
  height: 66rpx;
}
.option-wrapper i{
  display: inline-block;
  color: white;
  width: 25%;
  text-align: center;
}

.attention-txt{
  color: #0099FF;
  font-size: 28rpx;
  margin: 20rpx 40rpx 40rpx;
}

.model-bg{
  background: white;
  position: absolute;
  width: 600rpx;
  height: 800rpx;
  top: 100rpx;
  left: 75rpx;
  z-index: 10;
}

.model-show-color{
  width: 400rpx;
  height: 200rpx;
  margin: 80rpx 100rpx;
}

.model-input-wrapper{
  margin: 20rpx 0 20rpx 40rpx;
}

.model-input-wrapper text{
  color: #484848;
  font-size: 48rpx;
  position: relative;
  bottom: 14rpx;
  margin-right: 10rpx;
}

.model-input-wrapper input{
  border: 1px solid #999999;
  font-size: 30rpx;
  width: 63rpx;
  height: 30rpx;
  display: inline-block;
  margin-right: 50rpx;
  text-align: center;
  color: #484848;
}

.model-button-wrapper{
  position: absolute;
  bottom: 40rpx;
  right: 0;
}

.model-button-wrapper button{
  float: right;
  margin-right: 40rpx;
}