@import"../../iconfont/iconfont.wxss";
page {
  height: 100%;
  position: relative;
  overflow: hidden;
  box-sizing: border-box;
}

.view-page {
  height: 100%;
  width: 100%;
  left: 0;
  top: 0;
  box-sizing: border-box;
  position: absolute;
  overflow: hidden;
}

.page-content {
  box-sizing: border-box;
  position: relative;
  overflow-y: auto;
  background: #f8f8f8;
}

.inform-sep-wrapper{
  width: 670rpx;
  height: 120rpx;
  padding: 0 40rpx;
  border-bottom: 1px solid #cccccc;
}

.inform-sep-wrapper image{
  height: 90rpx;
  width: 90rpx;
  max-width: 100%;
  max-height: 100%;
  border-radius: 100%;
  float: right;
  margin-top: 17rpx;
  margin-right:20rpx;
}

.inform-sep-title{
  font-size: 32rpx;
  color: #484848;
  float: left;
  margin-top: 37rpx;
}

.inform-sep-val{
  color: #666666;
  font-size: 32rpx;
  float: right;
  margin-right: 30rpx;
  margin-top: 37rpx;
}

.inform-sep-icon{
  margin-top: 40rpx;
  color: #484848;
  float: right;
}

.further-inform{
  display: block;
  text-align: right;
  padding: 20rpx 40rpx;
  color: #FE9246;
  font-size:28rpx;
  margin-top: 20rpx;
}

.cfm-input{
  border-bottom: 1px solid #484848;
  margin-bottom: 40rpx;
  margin-top: 40rpx;
  color: #484848;
}
