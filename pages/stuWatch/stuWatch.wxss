@import"../../iconfont/iconfont.wxss";
page {
  height: 100%;
  position: relative;
  overflow: hidden;
  box-sizing: border-box;
}

.view-page {
  height: 100%;
  width: 100%;
  left: 0;
  top: 0;
  box-sizing: border-box;
  position: absolute;
  overflow: hidden;
}

.page-content {
  box-sizing: border-box;
  position: relative;
  overflow-y: auto;
  background: #f8f8f8;
  -webkit-overflow-scrolling: touch;
}

.top-tabbar{
  width: 100%;
  height: 96rpx;
  border-bottom: 1px solid #cccccc;
}

.left-tab{
  width: 50%;
  height: 100%;
  text-align: center;
  float: left;
  position: relative;
}

.left-tab text{
  color: #484848;
  font-size: 36rpx;
  position: relative;
  top: 20rpx;
}

.right-tab{
  width: 50%;
  height: 100%;
  text-align: center;
  float: left;
  position: relative;
}

.right-tab text{
  color: #484848;
  font-size: 36rpx;
  position: relative;
  top: 20rpx;
}

.choosen{
  color: #FE9246!important;
}

.choosenv{
  width: 120rpx;
  height: 8rpx;
  background: #FE9246;
  position: absolute;
  bottom: 0;
  left: 124rpx;
}

.no-acts{
  width: 500rpx;
  height: 500rpx;
  margin: 250rpx 205rpx 0 145rpx;
  max-height: 100%;
  max-width: 100%;
}

.watcher-wrapper{
  height: 120rpx;
  width: 670rpx;
  padding: 0 40rpx;
  border-bottom: 1px solid #cccccc;
}

.org-avatar{
  width: 90rpx;
  height: 90rpx;
  max-width: 100%;
  max-height: 100%;
  border-radius: 100%;
  margin-top: 17rpx;
  float: left;
}

.org-name{
  font-size: 32rpx;
  color: #484848;
  margin-left: 30rpx;
  margin-top: 20rpx;
  float: left;
}

.have-watched{
  color: #666666;
  font-size:32rpx;
  background: #cccccc;
  padding: 10rpx 15rpx;
  display: block;
  float: right;
  margin-top: 30rpx;
}