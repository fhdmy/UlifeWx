@import"../../iconfont/iconfont.wxss";
page {
  height: 100%;
  position: relative;
  overflow: hidden;
  box-sizing: border-box;
}

.view-page {
  height: 100%;
  width: 100%;
  left: 0;
  top: 0;
  box-sizing: border-box;
  position: absolute;
  overflow: hidden;
}

.page-content {
  box-sizing: border-box;
  position: relative;
  overflow-y: auto;
  background: #f8f8f8;
}

input{
  width: 710rpx;
  height: 96rpx;
  background:white;
  padding-left: 40rpx;
  margin-bottom: 30rpx;
  color:#666666;
}

button{
  width: 670rpx;
  margin: 0 auto;
  background: #E03636;
  color: white;
}

.save-button{
  background: #FE9246;
  color: white;
  margin-bottom: 60rpx;
}

.upload-file{
  margin-bottom: 80rpx;
  margin-left: 40rpx;
}

.upload-file text{
  color:#484848;
  font-size: 40rpx;
}

.upload-file i{
  color:#FE9246;
  font-size: 52rpx;
  padding-left: 20rpx;
  padding-right: 20rpx;
}