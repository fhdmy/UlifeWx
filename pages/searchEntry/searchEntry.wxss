@import"../../iconfont/iconfont.wxss";
page {
  height: 100%;
  position: relative;
  overflow: hidden;
  box-sizing: border-box;
}

.view-page {
  height: 100%;
  width: 100%;
  left: 0;
  top: 0;
  box-sizing: border-box;
  position: absolute;
  overflow: hidden;
}

.page-content {
  box-sizing: border-box;
  position: relative;
  overflow-y: auto;
  background: #f8f8f8;
  -webkit-overflow-scrolling: touch;
}

.search-input{
  width: 100%;
  height: 200rpx;
  border-bottom: 1px solid #484848;
  display: flex;
  vertical-align: center;
  align-items: center;
}

.search-input input{
  margin-left: 40rpx;
  color: #484848;
  font-size: 48rpx;
  font-weight: bold;
  height: 100rpx;
}

.label-item{
  width: 100%;
  height: 40rpx;
  margin-top: 50rpx;
}

.label-item-left{
  color: #484848;
  font-size: 32rpx;
  margin-left: 40rpx;
  float: left;
}

.label-item-right{
  color: #0066FF;
  font-size: 32rpx;
  margin-right: 40rpx;
  float: right;
}

.search-button{
  color: #E03636;
  font-size: 48rpx;
}

.history-button{
  width: 670rpx;
  margin: 40rpx;
}

.history-button text{
  margin-right: 40rpx;
  margin-bottom: 20rpx;
  padding: 15rpx 25rpx;
  /* border:1px solid #cccccc; */
  border-radius: 5%;
  font-size: 24rpx;
  /* color: #484848; */
  background: #999999;
  color: white;
}