@import"../../iconfont/iconfont.wxss";
page {
  height: 100%;
  position: relative;
  overflow: hidden;
  box-sizing: border-box;
}

.view-page {
  height: 100%;
  width: 100%;
  left: 0;
  top: 0;
  box-sizing: border-box;
  position: absolute;
  overflow: hidden;
}

.page-content {
  box-sizing: border-box;
  position: relative;
  overflow-y: auto;
  background: #f8f8f8;
  -webkit-overflow-scrolling: touch;
}

.inform-sep-wrapper{
  width: 670rpx;
  height: 120rpx;
  padding: 0 40rpx;
  border-bottom: 1px solid #cccccc;
}

.inform-sep-wrapper image{
  height: 90rpx;
  width: 90rpx;
  max-width: 100%;
  max-height: 100%;
  border-radius: 100%;
  float: right;
  margin-top: 17rpx;
  margin-right:20rpx;
}

.inform-sep-title{
  font-size: 32rpx;
  color: #484848;
  float: left;
  margin-top: 37rpx;
}

.inform-sep-val{
  color: #666666;
  font-size: 32rpx;
  float: right;
  margin-right: 30rpx;
  margin-top: 37rpx;
}

.inform-sep-icon{
  margin-top: 40rpx;
  color: #484848;
  float: right;
}

.further-inform{
  display: block;
  text-align: right;
  padding: 20rpx 40rpx;
  color: #FE9246;
  font-size:24rpx;
}

.save-button{
  width: 350rpx;
  /* height: 100rpx; */
  margin: 10rpx auto;
}

.remind-text{
  color: #0066FF;
  font-size: 20rpx;
  display: block;
  text-align: center;
}

.inform-sep-wrapper-picker{
  width: 100%;
  height: 120rpx;
  border-bottom: 1px solid #cccccc;
}

.inform-sep-title-picker{
  font-size: 32rpx;
  color: #484848;
  float: left;
  padding: 37rpx 0 37rpx 40rpx;
}

.inform-sep-val-picker{
  color: #666666;
  font-size: 32rpx;
  float: right;
  padding: 37rpx 30rpx;
  text-align: right;
  width: 500rpx;
}

.inform-sep-icon-picker{
  color: #484848;
  float: right;
  padding: 40rpx 40rpx 40rpx 0;
}

.cfm-input{
  background: white;
  padding: 10rpx 0 10rpx 20rpx;
  width: 46%;
  float: left;
}

.cfm-button{
  float: right;
  background: #E03636;
  color:white;
  font-size: 26rpx!important;
  height: 75rpx!important;
  width: 230rpx!important;
  padding:5rpx 13rpx 3rpx 13rpx!important;
}

.unable-touch{
  background: #CCCCCC!important;
  color: #666666!important;
  pointer-events: none;
}


