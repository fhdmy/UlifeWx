/* components/navbar/index.wxss */
@import"../../iconfont/iconfont.wxss";
.navbar {
  width: 100%; /*750rpx*/
  overflow: hidden;
  position: relative;
  top: 0;
  left: 0;
  z-index: 10;
  background: #E03636;
}


.navbar-title {
  width: 100%;
  height: 42px;
  line-height: 42px;
  text-align: center;
  position: absolute;
  bottom: 0;
  left: 0;
  z-index: 10;
  background-color: #E03636;
  color: white;
  font-size: 36rpx;
}

.navbar-action-wrap{
  position: absolute;
  padding: 20rpx 20rpx 20rpx 40rpx;
  bottom: 0rpx;
  z-index: 100;
}

.navbar-action-wrap2{
  position: absolute;
  left: 100rpx;
  padding:20rpx 20rpx 20rpx 30rpx;
  bottom: 0rpx;
  z-index: 100;
}

.navbar-action-wrap3{
  position: absolute;
  padding: 20rpx;
  bottom: 0rpx;
  z-index: 100;
}

.navbar-action-wrap4{
  position: absolute;
  left: 80rpx;
  padding: 20rpx;
  bottom: 0rpx;
  z-index: 100;
}

.navbar-action-wrap4 i{
  color: white;
  font-size: 44rpx;
}

.navbar-action-wrap3 i{
  color: white;
  font-size: 44rpx;
}

.navbar-action-wrap2 i{
  color: white;
}

.navbar-action-wrap i{
  color: white;
}
.navbar-action-group {  
  border:1px solid #e8e8e8;
  border-radius: 20px;
  overflow: hidden
}
.navbar-action_item{
  padding:3px 0;
  color: #333;
}
.navbar-action-group .navbar-action_item{
 border-right: 1px solid #e8e8e8;
 padding:3px 12px;
}

.display-wrapper{
  position: absolute;
  left: 80rpx;
  padding: 20rpx;
  bottom: 0rpx;
  z-index: 100;
}

.display-wrapper image{
  width: 60rpx;
  height: 60rpx;
  max-width: 100%;
  max-height: 100%;
  vertical-align: top;
  border-radius: 100%;
  margin-right: 20rpx;
}

.display-wrapper text{
  color: white;
  font-size: 32rpx;
}

.watch-icon{
  font-size: 48rpx;
  margin-left: 20rpx;
  color: white;
  position: relative;
  top: 6rpx; 
}

.editAct-wrapper{
  position: absolute;
  left: 80rpx;
  padding: 20rpx 20rpx 20rpx 0;
  bottom: 0rpx;
  z-index: 100;
}

.editAct-wrapper view{
  float: left;
  position: relative;
  bottom: 4rpx;
}

.edit-text{
  color: white;
  font-size: 32rpx;
  padding:0;
  border: none;
  margin-left: 5rpx;
  margin-right: 0;
  padding-right:20rpx;
}

.editAct-wrapper i{
  color: white;
  font-size: 36rpx;
  padding-left: 20rpx;
}

.edit-divide{
  color: white;
  font-size: 32rpx;
  padding:0;
  border: none;
  margin: 0;
  float: left;
  position: relative;
  top: 4rpx;
}

.loading-icon{
  animation: myLoading 1.5s infinite linear;
  width: 40rpx;
  height: 40rpx;
  max-height: 100%;
  max-width: 100%;
  display: inline-block;
  position: relative;
  left: 6rpx;
  top: 7rpx;
}

@keyframes myLoading{
  0%{ transform:rotate(0deg); }
  100%{ transform:rotate(360deg); }
}